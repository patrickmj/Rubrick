
r:Rubric a rdfs:Class .
	
r:RubricLine a rdfs:Class .

r:RubricLineValue a rdfs:Class .

r:Context a rdfs:Class .

r:RubricContext a rdfs:Class ; 
	rdfs:subClassOf r:Context .


r:Submission a rdfs:Class . 

r:Recording a rdfs:Class . 

r:RubricRecording a rdfs:Class ;
	rdfs:subClassOf r:Recording .



r:hasContext a rdfs:Property ; 
	rdfs:domain r:Recording ; 
	rdfs:range r:Context . 

r:hasRecording a rdfs:Property ; 
	rdfs:domain r:Context;
	rdfs:range r:Recording .

r:hasRubricRecording a rdfs:Property;
	rdfs:subPropertyOf r:hasRecording ; 
	rdfs:domain r:RubricContext ; 
	rdfs:range r:RubricRecording .

r:hasSubmission a rdfs:Property ; 
	rdfs:domain r:Context ; 
	rdfs:range r:Submission . 



r:appliesRubric a rdfs:Property ; 
	rdfs:domain r:RubricRecording ; 
	rdfs:range r:Rubric . 

r:hasRubricLineValue a rdfs:Property ; 
	rdfs:domain r:RubricRecording ;
	rdfs:range r:RubricLineValue ;

r:recordedBy a rdfs:Property ;
	rdfs:domain r:Recording ; 
	rdfs:range foaf:Person . 

r:hasRubric a rdfs:Property ; 
	rdfs:domain r:RubricContext ;
	rdfs:range r:Rubric .

